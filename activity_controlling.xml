<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controlling">

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="200dp" >

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutTop" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/title_bar" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:src="@drawable/tapeta" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="249dp"
        android:layout_height="36dp"
        android:layout_above="@+id/on_off"
        android:layout_alignStart="@+id/on_off"
        android:layout_alignLeft="@+id/on_off"
        android:layout_alignEnd="@+id/on_off"
        android:layout_alignRight="@+id/on_off"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:text="----------------------"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="249dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/on_off"
        android:layout_alignEnd="@+id/on_off"
        android:layout_alignRight="@+id/on_off"
        android:layout_alignBottom="@+id/on_off"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_marginBottom="-10dp"
        android:text="----------------------"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/on_off"
        android:layout_alignEnd="@+id/on_off"
        android:layout_alignRight="@+id/on_off"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="-118dp"
        android:layout_marginEnd="-119dp"
        android:layout_marginRight="-119dp"
        android:layout_marginBottom="0.1dp"
        android:text="-------------------------------------------"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <ToggleButton
        android:id="@+id/on_off"
        android:layout_width="244dp"
        android:layout_height="93dp"
        android:layout_centerInParent="true"
        android:background="@color/purple_700"
        android:gravity="center"
        android:textOff="BUM"
        android:textOn="OFF"
        android:textColor="@color/white"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/simpleTextView"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_above="@+id/on_off"
        android:layout_alignTop="@+id/on_off"
        android:layout_marginTop="-225dp"
        android:layout_marginBottom="97dp"
        android:gravity="center_horizontal"
        android:text="Odpal"
        android:textColor="@color/white"
        android:textSize="90sp" />

    <TextView
        android:id="@+id/simpleTextView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/on_off"
        android:layout_alignTop="@+id/simpleTextView"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="59dp"
        android:gravity="center_horizontal"
        android:text="To!"
        android:textColor="@color/white"
        android:textSize="90sp" />


</RelativeLayout>
